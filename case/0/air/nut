FoamFile
{
    version     2.0;
    format      ascii;
    class       volScalarField;
    location    "0/air";
    object      nut;
}
// * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * //

dimensions      [0 2 -1 0 0 0 0];

internalField   uniform 0.1; 

boundaryField
{

	#include "include/ABLConditions"
	
    west
    {
        type            calculated;
        value           uniform 0.1; 
    }
    east
    {
        type            calculated;
        value           uniform 0.1; 
    }
    top
    {
        type            slip;
    }
    ground
    {
        type            nutkAtmRoughWallFunction;
        z0              uniform 1.0;
        value           uniform 0.1;
    }
    north
    {
        type            slip; 
    }
    south
    {
        type            slip; 
    }
    buildings
    {
        type            nutkWallFunction;
        Cmu             0.09;
        kappa           0.41;
        E               9.8;
        value           uniform 0.1; 
    }
}


