//urbanMicroclimateFoam controls

initialSolidTimestepFactor	0.001666667;

minDeltaT       1E-6;

maxDeltaT       100;

minFluidIteration	0;
maxFluidIteration	1000;

pcEqnForm    pc-based; //'pc-based' or 'mixed' - default is 'pc-based'

blending true;
blendingCoeffs
{
    dampingThickness 60;
    alphaCoeffU 0.3;
    alphaCoeffT 0.1;
}

