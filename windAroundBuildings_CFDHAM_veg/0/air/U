FoamFile
{
    version     2.0;
    format      ascii;
    class       volVectorField;
    object      U;
}
// * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * //

dimensions      [0 1 -1 0 0 0 0];

internalField   uniform (0 0 0);

boundaryField
{
    west
    {
        type            inletOutlet;
        inletValue      uniform (0 0 0);
        value           $internalField;
    }
	east
    {
        type            atmBoundaryLayerInletVelocity;
        #include        "include/ABLConditions"; 
    }
    
    ground
    {
        type            fixedValue;
        value           uniform (0 0 0);
    }

    top
    {
        type            slip;
    }
	
	north
    {
        type            inletOutlet;
        inletValue      uniform (0 0 0);
        value           $internalField; 
    }
    south
    {
        type            atmBoundaryLayerInletVelocity;
        #include        "include/ABLConditions";
    }
    buildings
    {
        type            fixedValue;
        value           uniform (0 0 0);
    }
}


