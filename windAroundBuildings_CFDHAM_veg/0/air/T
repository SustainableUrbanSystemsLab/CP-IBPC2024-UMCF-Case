FoamFile
{
    version     2.0;
    format      ascii;
    class       volScalarField;
    location    "0/air";
    object      T;
}
// * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * //

dimensions      [0 0 0 1 0 0 0];

internalField   uniform 293.15; 

boundaryField
{
    west
    {
        type            inletOutlet;
        inletValue      uniform 299.0;
        value           uniform 299.0; 
    }
    east
    {
        type            uniformFixedValue;
        uniformValue    tableFile;
        uniformValueCoeffs
        {
            file        "$FOAM_CASE/0/air/Tambient";
        }
        value           uniform 299.0; 
    }
    top
    {
        type            slip; 
    }
    ground
    {
        type            zeroGradient;        
    }
    north
    {
        type            slip;
    }
    south
    {
        type            slip; 
    }
    buildings
    {
        type            compressible::CFDHAMfluidTemperatureCoupledMixed;
        value           uniform 298.15; 
    }
}


