FoamFile
{
    version     2.0;
    format      ascii;
    class       volScalarField;
    location    "0/air";
    object      p_rgh;
}
// * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * //

dimensions      [1 -1 -2 0 0 0 0];

internalField   uniform 1e5; 

boundaryField
{
    west
    {
        type            fixedValue;
        value           uniform 1e5; 
    }
    east
    {
        type            fixedFluxPressure;
        gradient        uniform 0; 
        value           uniform 1e5; 
    }
    top
    {
        type            slip;
    }
    ground
    {
        type            fixedFluxPressure;
        gradient        uniform 0;
        value           uniform 1e5; 
    }
    north
    {
        type            slip; 
    }
    south
    {
        type            slip; 
    }
    buildings
    {
        type            fixedFluxPressure;
        gradient        uniform 0; 
        value           uniform 1e5; 
    }
}


