FoamFile
{
    version     2.0;
    format      ascii;
    class       volScalarField;
    location    "0/air";
    object      k;
}
// * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * //

dimensions      [0 2 -2 0 0 0 0];

internalField   uniform 1.2; 

boundaryField
{

	#include "include/ABLConditions"
	
    west
    {
        type            zeroGradient;
    }
    east
    {
        type            atmBoundaryLayerInletK;
        #include        "include/ABLConditions"
    }
    top
    {
        type            slip;
    }
    ground
    {
        type            kqRWallFunction;
        value           uniform 1.2; 
    }
    north
    {
        type            slip;
    }
    south
    {
        type            slip;
    }
    buildings
    {
        type            kqRWallFunction;
        value           uniform 1.2; 
    }
}


