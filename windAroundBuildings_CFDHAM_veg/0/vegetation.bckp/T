        value           uniform 297;
    }
    ground
    {
        type            mapped;
        field           T;
        setAverage      0;
        average         0;
        interpolationScheme cell;
        value           uniform 297;
    }
    top
    {
        type            mapped;
        field           T;
        setAverage      0;
        average         0;
        interpolationScheme cell;
        value           uniform 297;
    }
    buildings
